{
  "lerna": "3.4.3",
  "packages": [
    "packages/*"
  ],
  "version": "independent",
  "useGitVersion": true,
  "gitVersionPrefix": "v",
  "command": {
    "bootstrap": {
      "hoist": true,
      "npmClientArgs": ["--no-package-lock"],
      "ci": false
    },
    "publish": {
      "allowBranch": "develop",
      "conventionalCommits": true,
      "message": "chore(release): publish %s"
    }
  },
  "ignoreChanges": [
    "**/CHANGELOG.md",
    "lerna.json"
  ]
}
